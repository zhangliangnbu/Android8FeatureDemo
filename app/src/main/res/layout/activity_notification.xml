<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhangliang.android8featuredemo.NotificationActivity">

    <Button
        android:id="@+id/btn_ch1_nt1"
        android:text="send_chan1_notification1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_ch1_nt2"
        android:text="send_chan1_notification2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_ch1_nt1"/>

    <Button
        android:id="@+id/btn_ch2_nt1"
        android:text="send_chan2_notification1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_ch1_nt2"/>

    <Button
        android:id="@+id/btn_ch2_nt2"
        android:text="send_chan2_notification2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_ch2_nt1"/>

</android.support.constraint.ConstraintLayout>
